{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": [
      "*/dist/*",
      "*/.cache/*",
      "*/src-tauri/target/*",
      "*/.output/*",
      "*/.nuxt/*",
      "*/dependencies/*"
    ]
  },
  "formatter": {
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "es5"
    }
  }
}
